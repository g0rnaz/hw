#include <iostream>
using namespace std;
int main() {
	int a;
	int summ=0;
	cin >> a;
	while (a < 500)
	{
		summ += a;
		a++;
	}
	cout << summ;
}

#include <iostream>
using namespace std;
int main() {
	int a, y, aa;
	cin >> a >> y;
	aa = a;
	while (1 < y)
	{
		aa *= a;
		y--;
	}
	cout << aa;
}


#include <iostream>
using namespace std;
int main() {
	float a = 1, b = 1000, avg = 0, counter = 0, summ = 0;

	while (a<b)
	{
		summ += a;
		counter++;
		a++;
	}
	avg = summ / counter;
	cout << avg;
}


#include <iostream>
using namespace std;
int main() {
	const int GAIN = 50, ROW = 100, FINE = 20;
	int salary, lates, rows, fine, got;
	cin >> salary >> lates;
	while (true)
	{
		fine = lates / 3 * 20;
		rows = salary * 2;
		got = salary - fine;
		break;
	}
	cout << rows << endl;
	cout << "he will get:" << got << endl;
}


#include <iostream>
using namespace std;
int main() {
	const int GAIN = 50, ROW = 100, FINE = 20;
	float salary, lates, rows, fine, got;
	cin >> rows >> salary;
	while (true)
	{
		lates =  (- salary * 2 + rows)/(40/3.0f);
		break;
	}
	cout << lates;
}


#include <iostream>
using namespace std;
int main() {
	const int GAIN = 50, ROW = 100, FINE = 20;
	int salary, lates, rows, fine, got;
	cin >> rows >> lates;
	while (true)
	{
		fine = lates / 3 * 20;
		salary = rows / 2;
		got = salary - fine;
		break;
	}
	cout << rows << endl;
	cout << "he will get:" << got << endl;
}
